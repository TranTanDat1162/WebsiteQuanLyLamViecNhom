    function getProjectAttachments(project) {
        let pAttachments = project.getAttribute("data-project-attachment");
        if (pAttachments != null) {
            let pAttachmentList = JSON.parse(pAttachments);

            let badgeContainer = document.getElementById("num-of-attachment-badge");
            badgeContainer.innerHTML = pAttachmentList.length;

            let downloadLinksContainer = document.getElementById("download-links");

            downloadLinksContainer.addEventListener("click", function () {
                // Clear existing list items
                document.getElementById("attachmentList").innerHTML = "";

                for (let i = 0; i < pAttachmentList.length; i++) {
                    let attachment = pAttachmentList[i];
                    const downloadLink = attachment[0];
                    const fileName = attachment[1];

                    let listItem = document.createElement("li");
                    listItem.classList.add("list-group-item");

                    let fileLink = document.createElement("a");
                    fileLink.href = downloadLink;
                    fileLink.textContent = fileName;

                    listItem.appendChild(fileLink);
                    document.getElementById("attachmentList").appendChild(listItem);
                }

                // Open the modal
                $('#attachmentModal').modal('show');
            });
        }
    }

