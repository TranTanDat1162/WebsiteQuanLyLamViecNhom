@if (TempData["ErrorMessage"] != null)
{
    <script>
        var errorMessage = "@TempData["ErrorMessage"]";
        var alertDiv = document.createElement("div");
        alertDiv.className = "alert alert-danger";
        alertDiv.innerHTML = errorMessage;
        document.body.appendChild(alertDiv);
        setTimeout(function () {
            alertDiv.style.display = "none";
        }, 5000);
    </script>
}



<div class="row align-items-center justify-content-center height-self-center">
    <div class="col-lg-8">
        <div class="card auth-card">
            <div class="card-body p-0">
                <div class="d-flex align-items-center auth-content">
                    <div class="col-lg-6 bg-primary content-left">
                        <div class="p-3">
                            <h2 class="mb-2 text-white">Đặt lại mật khẩu</h2>
                            <p>Nhập địa chỉ email của bạn và chúng tôi sẽ gửi cho bạn một email.
                                <br> Nhấp vào link để tạo mật khẩu mới
                            </p>
                            <form method="post">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-floating form-group">
                                            <input asp-for="Input.Email" class="form-control floating-input" type="email" placeholder="Email" autocomplete="username" aria-required="true">
                                        </div>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-white">Reset</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 content-right">
                        <img src="https://cdn.haitrieu.com/wp-content/uploads/2022/05/Logo-UEF.png" class="img-fluid image-right" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelector('form').addEventListener('submit', function (event) {
            var emailInput = document.querySelector('input[name="Input.Email"]');
            var emailNotFoundError = document.getElementById('emailNotFoundError');
            emailNotFoundError.style.display = 'none'; // Ẩn thông báo lỗi trước khi kiểm tra

            if (!emailInput.value) {
                // Ngăn chặn gửi form nếu trường email trống
                event.preventDefault();
                emailNotFoundError.style.display = 'block'; // Hiển thị thông báo lỗi
            }
        });
    });
</script>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
