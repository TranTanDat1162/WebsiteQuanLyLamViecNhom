@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="row align-items-center justify-content-center height-self-center">
    <div class="col-lg-8">
        <div class="card auth-card">
            <div class="card-body p-0">
                <div class="d-flex align-items-center auth-content">
                    <div class="col-lg-6 bg-primary content-left">
                        <div class="p-3">
                            <h2 class="mb-2 text-white">Đăng nhập</h2>
                            <p>UEF - Quản lý làm việc nhóm</p>
                            <form id="account" method="post">
                                <div class="row">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="col-lg-12">
                                        <div class="floating-label form-group">
                                            <input asp-for="Input.Email" class="floating-input form-control" autocomplete="username" type="email" placeholder=" ">
                                            <label asp-for="Input.Email" class="form-label">Email</label>
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="floating-label form-group">
                                            <input asp-for="Input.Password" class="floating-input form-control" autocomplete="current-password" type="password" placeholder=" ">
                                            <label asp-for="Input.Password" class="form-label">Password</label>
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu</a>
                                    </div>
                                </div>
                                <button id="login-submit" type="submit" class="btn btn-white">Đăng nhập</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 content-right">
                        <img src="https://cdn.haitrieu.com/wp-content/uploads/2022/05/Logo-UEF.png" class="img-fluid image-right" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
